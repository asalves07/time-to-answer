<div class="container-fluid">
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Listando Quest천es</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <div class="row"><div class="col-sm-12">
          <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
            <thead>
              <tr role="row">
                <th style="width:30px" class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Name: activate to sort column ascending" style="width: 134px;">#</th>
                <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 208px;">Quest천es</th>
                <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 208px;">Assuntos</th>
                <th style="width:30px" class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 208px;">
                  <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle btn-sm" do %>
                    <i class="fas fa-plus"></i>
                  <% end %>
                </th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th style="width:30px" rowspan="1" colspan="1">#</th>
                <th rowspan="1" colspan="1">Quest천es</th>
                <th rowspan="1" colspan="1">Assuntos</th>
                <th style="width:30px" rowspan="1" colspan="1"></th>
              </tr>
            </tfoot>
            <tbody>
              <% @questions.each do |question| %>
                <tr role="row" class="odd">
                  <td style="width:50px" ><%= question.id %></td>
                  <td><%= question.description.truncate(70) %></td>
                  <td><%= question.subject.description %></td>
                  <td style="width:50px">
                    <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle btn-sm" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-danger btn-circle btn-sm", data: {confirm: "Tem certeza que deseja excluir esta quest찾o"} do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="text-center">
            <%= paginate @questions %>
          </div>
        </div>
      </div>
    </div>
  </div>