<h1>Formulário de edição</h1>
<div class="row">
  <div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
      <div class="x_content">
        <br>
        <%= form_with(model: [:admins_backoffice, @admin ], local: true) do |form| %>

          <div id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
            <div class="item form-group">
              <%= form.label :email, class:"col-form-label col-md-3 col-sm-3 label-align"%>
              <div class="col-md-6 col-sm-6 ">
                <%= form.text_field :email, class: "form-control required"%>
              </div>
            </div>
            <div class="item form-group">
              <%= form.label :password, class:"col-form-label col-md-3 col-sm-3 label-align required"%>
              <div class="col-md-6 col-sm-6 ">
                <%= form.text_field :password, class: "form-control required"%>
              </div>
            </div>
            <div class="item form-group">
              <%= form.label :password_confirmation, class:"col-form-label col-md-3 col-sm-3 label-align required"%>
              <div class="col-md-6 col-sm-6 ">
                <%= form.text_field :password_confirmation, class: "form-control required"%>
              </div>
            </div>
            <div class="item form-group">
              <div class="col-md-6 col-sm-6">
                <button type="submit" class="btn btn-success">Salvar</button>
                <button class="btn btn-primary" type="reset">Resetar</button>
                <button class="btn btn-primary" type="button">Cancelar</button>
              </div>
            </div>
          </div>
          
        <% end %>
      </div>
    </div>
  </div>
</div>

