<div class="row">
  <div class="col-md-12 col-sm-12 ">

    <% if @admin.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">X</button>
        
        <ul>
          <% @admin.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
          <% end %>
        </ul>

      </div>
    <% end %>

    <div class="x_panel">
      <div class="x_content">
        <br>
        <%= form_with(model: [:admins_backoffice, @admin ], local: true) do |form| %>

          <div id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
            <div class="item form-group">
              <%= form.label :email, class:"col-form-label col-md-3 col-sm-3 label-align"%>
              <div class="col-md-6 col-sm-6 ">
                <%= form.text_field :email, class: "form-control required", placeholder: "Email do administrador"%>
              </div>
            </div>
            <div class="item form-group">
              <%= form.label :password, class:"col-form-label col-md-3 col-sm-3 label-align required"%>
              <div class="col-md-6 col-sm-6 ">
                <%= form.password_field :password, class: "form-control required", placeholder:"Senha"%>
              </div>
            </div>
            <div class="item form-group">
              <%= form.label :password_confirmation, class:"col-form-label col-md-3 col-sm-3 label-align required"%>
              <div class="col-md-6 col-sm-6 ">
                <%= form.password_field :password_confirmation, class: "form-control required", placeholder:"Senha de confirmação" %>
              </div>
            </div>
            <div class="item form-group">
              <div class="col-md-6 col-sm-6">
                <button type="submit" class="btn btn-success">Salvar</button>
                <% if action_name == 'edit' %>
                  <%= link_to 'Resetar', edit_admins_backoffice_admin_path(@admin), class:"btn btn-primary" %>
                <% end %>
                <%= link_to 'Cancelar', admins_backoffice_admins_path, class: "btn btn-danger"%>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

