<div class="container-fluid">
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary"><%= t('messages.listing', model: @admins.model_name.human(count: 2)) %></h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <div class="row"><div class="col-sm-12">
          <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
            <thead>
              <tr role="row">
                <th style="width:50px" class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Name: activate to sort column ascending" style="width: 134px;">#</th>
                <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 208px;"><%= translate_attribute(@admins, :email) %></th>
                <th style="width:50px" class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 208px;">
                  <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle btn-sm" do %>
                    <i class="fas fa-plus"></i>
                  <% end %>
                </th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th style="width:50px" rowspan="1" colspan="1">#</th>
                <th rowspan="1" colspan="1"><%= translate_attribute(@admins, :email) %></th>
                <th style="width:50px" rowspan="1" colspan="1"></th>
              </tr>
            </tfoot>
            <tbody>
              <% @admins.each do |admin| %>
                <tr role="row" class="odd">
                  <td style="width:50px" ><%= admin.id %></td>
                  <td><%= admin.email %></td>
                  <td style="width:50px">
                    <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle btn-sm" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle btn-sm", data: {confirm: t('messages.confirm_with', item: admin.email.truncate(15))} do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="text-center">
            <%= paginate @admins %>
          </div>
        </div>
      </div>
    </div>
  </div>