<div class="jumbotron">
  <% unless params[:term] %>
    <h3>Ãšltimas perguntas cadastradas...</h3>
  <% else %>
  <h3><%= "Resultados para \"#{params[:term]}\"..."%></h3>
  <% end %>
</div>

<% @questions.each do |question| %>
  <%= form_with url: site_answer_path do |form| %>
    <div class="card">
      <div class="card-header">
        <%= question.description %>
      </div>
      <div class="card-body">
        <ul>
          <% question.answers.each do |answer| %>
            <li style="list-style:none">
              <div class="radio">
                <label>
                  <%= radio_button_tag 'answer_id', answer.id %>
                  <%= answer.description %>
                </label>
              </div>
            </li>
          <% end %>
          <li style="list-style:none;">
            <%= form.submit "Responder", class:"btn btn-primary" %>
          </li>
        </ul>
      </div>
    </div>
    <br>
  <% end %>
<% end %>
<div class="text-center">
  <%= paginate @questions %>
</div>
